
<div id="map"
  style="width: 100%; height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div class="">
  <div class="row">
    <div class="col-3">
      <div class="card mt-3 tab-card">
        <div class="card-header tab-card-header">
          <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link" id="one-tab" data-toggle="tab" href="#one" role="tab" aria-controls="One" aria-selected="true">Active Cluster</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="two-tab" data-toggle="tab" href="#two" role="tab" aria-controls="Two" aria-selected="false">Inactive Cluster</a>
            </li>
          </ul>
        </div>

        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade show active p-4" id="one" role="tabpanel" aria-labelledby="one-tab">
            <h5 class="card-title">Active Cluster Groups</h5>
            <% @locations.each do |location| %>
              <ul class="card-text">
                <li class="cluster" data-lng=<%= location.longitude %> data-lat=<%= location.latitude %> ><%= location.name %></li>
              </ul>
            <% end %>            
          </div>
          <div class="tab-pane fade p-3" id="two" role="tabpanel" aria-labelledby="two-tab">
            <h5 class="card-title">Inactive Cluster Groups</h5>
            <% @inactive_clusters.each do |cluster| %>
              <ul class="card-text">
                <li><%= cluster.name %></li>
              </ul>
            <% end %> 
                    
          </div>
        </div>
      </div>
    </div>
  </div>
</div>